#
# Metrics Tests
#

# Test reading metrics - verify row count (3 metrics: sum, gauge, histogram)
query I
SELECT COUNT(*) FROM read_otlp_metrics('test/data/metrics_simple.jsonl');
----
3

# Test metrics schema - verify key column types
query IIIII
SELECT
    typeof(Timestamp) as ts_type,
    typeof(ServiceName) as service_type,
    typeof(MetricName) as name_type,
    typeof(MetricType) as type_type,
    typeof(Value) as value_type
FROM read_otlp_metrics('test/data/metrics_simple.jsonl')
LIMIT 1;
----
TIMESTAMP_NS	VARCHAR	VARCHAR	VARCHAR	DOUBLE

# Test metrics - verify metric type discriminator
query III
SELECT
    MetricType,
    Value IS NOT NULL as has_value,
    Count IS NOT NULL as has_count
FROM read_otlp_metrics('test/data/metrics_simple.jsonl')
ORDER BY MetricName;
----
histogram	false	true
sum	true	false
gauge	true	false

# Test metrics - verify sum metric fields
query III
SELECT
    Value = 42.0 as correct_value,
    AggregationTemporality = 2 as correct_temporality,
    IsMonotonic = true as correct_monotonic
FROM read_otlp_metrics('test/data/metrics_simple.jsonl')
WHERE MetricType = 'sum';
----
true	true	true

# Test metrics - verify gauge metric value
query I
SELECT Value = 524288000.0
FROM read_otlp_metrics('test/data/metrics_simple.jsonl')
WHERE MetricType = 'gauge';
----
true

# Test metrics - verify histogram metric fields
query III
SELECT
    Count = 100 as correct_count,
    Sum = 5000.0 as correct_sum,
    AggregationTemporality = 2 as correct_temporality
FROM read_otlp_metrics('test/data/metrics_simple.jsonl')
WHERE MetricType = 'histogram';
----
true	true	true

# Test metrics - verify service name extraction
query I
SELECT COUNT(*)
FROM read_otlp_metrics('test/data/metrics_simple.jsonl')
WHERE ServiceName = 'test-service';
----
3
